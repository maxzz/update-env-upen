{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CLI w/ tsx",
      "type": "node",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**",
      ],
      "runtimeExecutable": "tsx",
      "program": "${workspaceFolder}/src/main.ts",
      "args": ["${workspaceFolder}", "--verbose"],
      //"args": ["--verbose"],

      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      //"sourceMaps": false
    },
    {
      "name": "CLI",
      "type": "node",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/dist/main.js",
      "args": ["--verbose"],
      //"args": ["${workspaceFolder}", "--verbose"],

      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": {
        "type": "npm",
        "script": "build"
      },
      "sourceMaps": true,
    },
    {
      "name": "CLI w/ ts-node",
      "type": "node",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/main.ts",
      "args": ["--verbose"],
      "runtimeArgs": ["-r", "ts-node/register"],

      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": false,
    }
  ]
}
