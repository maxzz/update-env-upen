{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CLI",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main.js",
      "args": ["--verbose"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "preLaunchTask": {
        "type": "npm",
        "script": "build"
      }
    },
    {
      "name": "CLI w/ verbose",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main.js",
      "args": ["--verbose"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "preLaunchTask": {
        "type": "npm",
        "script": "build"
      }
    },
    {
      "name": "CLI w/ folder",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/main.js",
      "args": ["${workspaceFolder}", "--verbose"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
      "preLaunchTask": {
        "type": "npm",
        "script": "build"
      }
    },
    {
      "name": "CLI w/ ts-node",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.ts",
      "args": ["--verbose"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": false
    }
  ]
}